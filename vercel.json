# vercel.json
{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "OPENWEATHER_API_KEY": "@openweather_api_key"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  }
}

